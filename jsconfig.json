{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@data/*": ["./data/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],
      "stitches": ["./stiches.config.js"]
    }
  },
  "include": [
    "./components/**/*",
    "./data/**/*",
    "./styles/**/*",
    "./utils/**/*"
  ],
  "exclude": ["node_modules", "dist", ".next", ".yarn"]
}
