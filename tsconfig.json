{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "esnext",
    "paths": {
      "@/*": ["*"]
    },
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "dist", ".vercel", "public"],
  "extends": "astro/tsconfigs/strict",
  "include": ["**/*", ".eslintrc"]
}
