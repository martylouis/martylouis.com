---
import ButtonLink from "@/components/ButtonLink.astro";
import Landmark from "@/components/Landmark.astro";
import { ModeToggle } from "@/components/ModeToggle";
import ProjectCard from "@/components/ProjectCard.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { projectEntries } from "@/lib/entries";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import marty from "../assets/img/marty.jpg";

const meta = {
  title: "Marty Thierry - Web Designer & Developer",
  description:
    "ðŸ‘‹ Hey Iâ€™m Marty, a web designer and developer based in Destin, FL.",
  canonicalURL: "https://martylouis.com",
};

const content = {
  lead: "ðŸ‘‹ Hey, I'm Marty, a web designer and developer from Destin, FL. I have over 10 years of experience specializing in designing user-friendly and visually attractive interfaces for websites and apps.",
};
---

<BaseLayout {...meta}>
  <Landmark as="header" slot="header" class="mt-8 md:mt-32">
    <div class="flex w-full justify-between gap-6 md:items-center">
      <div class="flex flex-wrap items-center gap-4">
        <Image src={marty} alt="Marty Louis" class="size-16 rounded-full" />
        <div>
          <h1>Marty Thierry (martylouis)</h1>
          <p class="text-sm text-zinc-600 dark:text-zinc-400">
            Web Designer & Developer
          </p>
        </div>
      </div>
      <ModeToggle client:load />
    </div>
  </Landmark>
  <Landmark>
    <p class="mt-6 text-base" set:text={content.lead} />

    <div class="mt-6 flex gap-4">
      <ButtonLink target="_blank" href="mailto:hello@martylouis.com">
        <span><Icon name="email" class="-ml-1 mr-1.5 size-4" /></span>Contact Me
      </ButtonLink>
      <div class="flex gap-2">
        <ButtonLink
          size="icon"
          variant="ghost"
          href="https://github.com/martylouis"
          target="_blank"
          rel="noreferrer"
          title="Follow @martylouis on GitHub"
        >
          <Icon name="github" class="size-5" />
        </ButtonLink>
        <ButtonLink
          size="icon"
          variant="ghost"
          href="https://twitter.com/martylouis"
          target="_blank"
          rel="noreferrer"
          title="Follow @martylouis on Twitter"
        >
          <Icon name="twitter" class="size-5" />
        </ButtonLink>
        <ButtonLink
          size="icon"
          variant="ghost"
          href="https://www.linkedin.com/in/martylouis/"
          target="_blank"
          rel="noreferrer"
          title="Follow @martylouis on LinkedIn"
        >
          <Icon name="linkedin" class="size-5" />
        </ButtonLink>
      </div>
    </div>
  </Landmark>
  <Landmark block="lg" width="lg">
    <!-- <h2>Projects</h2> -->
    <div class="mt-8 grid gap-x-10 gap-y-16 sm:grid-cols-2 lg:grid-cols-3">
      {projectEntries.map(({ entry }) => <ProjectCard {entry} />)}
    </div>
  </Landmark>
</BaseLayout>
