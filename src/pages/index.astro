---
import ButtonLink from "@/components/ButtonLink.astro"
import { Container } from "@/components/Container"
import { Card } from "@/components/ui/card"
import siteConfig from "@/data/site.config"
import BaseLayout from "@/layouts/BaseLayout.astro"
import { formatDate } from "@/lib/formatDate"
import { Icon } from "astro-icon/components"
---

<BaseLayout
  image={{
    src: "/images/og/martylouis.jpg",
    alt: "Let's make your website better",
  }}
>
  <Container className="mt-9">
    <div class="max-w-2xl">
      <h1
        class="text-4xl font-bold tracking-tight text-zinc-800 sm:text-5xl dark:text-zinc-100"
      >
        UX Designer & Developer
      </h1>
      <p class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
        I’m Marty, a UX designer and developer based in Destin, Florida. I’m the
        owner of Marty Louis Co, where I help businesses create easy-to-use and
        functional apps and websites.
      </p>
      <div class="mt-6 flex gap-6 text-zinc-600 dark:text-zinc-400">
        {
          siteConfig.socialLinks.map((link) => (
            <li class="flex">
              <ButtonLink
                size="icon"
                variant="ghost"
                href={link.href}
                target="_blank"
                rel="noreferrer"
                aria-label={link.text}
                class="group"
              >
                <Icon
                  name={link.icon}
                  class="size-6 flex-none text-zinc-500 transition group-hover:text-teal-500"
                />
              </ButtonLink>
            </li>
          ))
        }
      </div>
    </div>
  </Container>
  <Container className="mt-24 md:mt-28">
    <div
      class="mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2"
    >
      <div class="flex flex-col gap-16">
        <Card as="article">
          <Card.Title href="/about">Title</Card.Title>
          <Card.Eyebrow as="time" dateTime="2024-08-28" decorate>
            {formatDate("2024-08-28")}
          </Card.Eyebrow>
          <Card.Description>
            I’m Marty, a UX designer and developer based in Destin, Florida. I’m
            the owner of Marty Louis Co, where I help businesses create
            easy-to-use and functional apps and websites.
          </Card.Description>
          <Card.Cta>Read article</Card.Cta>
        </Card>
      </div>
      <div class="space-y-10 lg:pl-16 xl:pl-24">
        <h3>Newsletter</h3>
        <h3>Resume</h3>
      </div>
    </div>
  </Container>
</BaseLayout>
