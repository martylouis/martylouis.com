---
import Landmark from "@/components/Landmark.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import {
  getHomeURL,
  getProjectURL,
  getPostURL,
  getPermalink,
} from "@/lib/urlUtils";
---

<BaseLayout>
  <Landmark>
    <h1>Hey, I'm Marty</h1>
    <nav class="flex flex-col">
      <a href={getHomeURL()}>Home</a>
      <a href={getPermalink("/projects")}>Projects</a>
      <a href={getPermalink("/services")}>Services</a>
      <a href={getPermalink("/about")}>About</a>
      <a href={getPermalink("/uses")}>Uses</a>
      <a href={getPermalink("/now")}>Now</a>
      <a href={getProjectURL("redhorse-corp")}>Redhorse Corp</a>
      <a href={getPostURL("hello-world")}>Hello World</a>
    </nav>
  </Landmark>
</BaseLayout>
