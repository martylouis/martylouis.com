---
import config from "@/data/config";
import MainLayout from "@/layouts/MainLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const pageEntries = await getCollection("pages", ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true; // only include draft entries in dev
  });

  let params = pageEntries.map((entry) => {
    // let slug = entry.slug != 'index' ? entry.slug : undefined
    return {
      params: { slug: entry.slug || undefined },
      props: { entry },
    };
  });

  return params;
}

const { entry } = Astro.props;
const { ...head } = entry.data;

const { Content } = await entry.render();
---

<MainLayout {...head}>
  <Content />
</MainLayout>
