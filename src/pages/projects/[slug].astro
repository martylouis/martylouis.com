---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const projectEntries = await getCollection("projects", ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true; // only include draft entries in dev
  });

  let params = projectEntries.map((entry) => {
    return {
      params: { slug: entry.slug || undefined },
      props: { entry },
    };
  });

  return params;
}

const { entry } = Astro.props;
const { ...head } = entry.data;

const { Content } = await entry.render();
---

<BaseLayout {...head}>
  <Content />
</BaseLayout>
