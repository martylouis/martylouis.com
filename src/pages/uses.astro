---
import { Container } from "@/components/Container"
import PageHeader from "@/components/PageHeader.astro"
import { Section } from "@/components/Section"
import { Card } from "@/components/ui/card"
import BaseLayout from "@/layouts/BaseLayout.astro"
import { getCollection } from "astro:content"

const content = {
  title: "Software I use, gadgets I love, and other things I recommend.",
  intro:
    "I get asked a lot about the things I use to build software, stay productive, or buy to fool myself into thinking I’m being productive when I’m really just procrastinating. Here’s a big list of all of my favorite stuff.",
}

const usesCollection = await getCollection("uses")
---

<BaseLayout title="Uses" description="The tools and software I use.">
  <PageHeader title={content.title} intro={content.intro} />
  <Container className="mt-16 sm:mt-20">
    <div class="space-y-20">
      {
        usesCollection.map((collection) => (
          <Section title={collection.data.title}>
            <ul role="list" class="space-y-12">
              {collection.data.items.map((item) => (
                <Card as="li">
                  {/* <div class="relative z-10 mb-6 flex size-12 items-center justify-center rounded-full bg-white shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
                    <div class="size-8" />
                  </div> */}
                  <Card.Title as="h3" href={item.url}>
                    {item.title}
                  </Card.Title>
                  {item.description && (
                    <Card.Description>{item.description}</Card.Description>
                  )}
                </Card>
              ))}
            </ul>
          </Section>
        ))
      }
    </div>
  </Container>
</BaseLayout>
