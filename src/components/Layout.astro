---
import Footer from "@/components/Footer.astro";
import { Header } from "@/components/Header";
import Metadata from "@/components/Metadata.astro";
import "@/styles/global.css";
import marty from "@/assets/img/marty.jpg";
import { isHomePage } from "@/lib/utils";

const { title, description, ...meta } = Astro.props;

const isHome = isHomePage(new URL(Astro.request.url).pathname.toString());
---

<html lang="en" class="h-full scroll-smooth antialiased">
  <head>
    <Metadata {title} {description} {...meta} />
  </head>
  <body class="flex h-full bg-zinc-50 dark:bg-black">
    <div aria-hidden="true" class="fixed inset-0 flex justify-center sm:px-8">
      <div aria-hidden="true" class="flex w-full max-w-7xl lg:px-8">
        <div
          aria-hidden="true"
          class="w-full bg-white ring-1 ring-zinc-100 dark:bg-zinc-900 dark:ring-zinc-300/20"
        >
        </div>
      </div>
    </div>
    <div class="relative flex w-full flex-col">
      <Header avatarSrc={marty.src} isHomePage={isHome} client:load />
      <main class="flex-auto">
        <slot />
      </main>
      <Footer />
    </div>
    <script src="../scripts/theme-switcher.ts"></script>
  </body>
</html>
