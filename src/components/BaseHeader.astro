---
import marty from '@/assets/img/marty.jpg';
import { Image } from 'astro:assets';
---

<header slot="header" role="banner">
  <div class="my-16 mx-auto flex max-w-max items-center justify-center gap-3">
    <Image
      src={marty}
      alt="Marty Louis"
      width={96}
      loading="eager"
      class="ring-offset-background ring-border size-12 shrink-0 overflow-hidden rounded-full ring-1 ring-offset-1"
    />
    <div class="mr-2">
      <p><span class="font-bold">Marty Thierry</span></p>
      <p class="text-foreground/75 text-xs">Web Designer & Developer</p>
    </div>
  </div>
</header>
