---
import headerGradient from "@/images/header-gradient2.svg"
---

<div aria-hidden="true" class="fixed inset-0 -z-10 flex justify-center sm:px-8">
  <div aria-hidden="true" class="flex w-full max-w-7xl lg:px-8">
    <div
      aria-hidden="true"
      class="relative w-full bg-transparent ring-1 ring-zinc-200 dark:bg-transparent dark:ring-zinc-300/10"
    >
    </div>
  </div>
</div>
<div class="gradients pointer-events-none"></div>
<svg id="texture">
  <filter id="noiseFilter">
    <feTurbulence
      type="fractalNoise"
      baseFrequency=".9"
      numOctaves="2"
      stitchTiles="stitch"
      seed="20"
    >
    </feTurbulence>
    <feColorMatrix type="saturate" values="0"></feColorMatrix>
  </filter>
  <rect width="100%" height="100%" filter="url(#noiseFilter)"></rect>
</svg>

<style define:vars={{ headerGradient: `url(${headerGradient.src})` }}>
  .gradients::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image: var(--headerGradient);
    background-repeat: no-repeat;
    background-position: top center;
    /* z-index: -1; */
  }

  #texture {
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: -1;
    width: 100%;
    height: calc(200px + 100vh);
    opacity: 0.25;
    pointer-events: none;
    transform: translateY(0px);
    filter: contrast(120%) brightness(120%);
  }

  html.dark #texture {
    filter: contrast(60%) brightness(80%);
  }
</style>
